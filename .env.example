# GenRF Circuit Diffuser Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Core Application Settings
# =============================================================================

# Application environment (development, staging, production)
GENRF_ENV=development

# Application port for web interface
GENRF_PORT=8000

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
GENRF_LOG_LEVEL=INFO

# =============================================================================
# SPICE Simulation Configuration
# =============================================================================

# SPICE engine selection (ngspice, xyce, ltspice)
SPICE_ENGINE=ngspice

# Path to SPICE executable (leave empty for system PATH)
SPICE_EXECUTABLE_PATH=

# SPICE simulation timeout in seconds
SPICE_TIMEOUT=300

# Maximum concurrent SPICE simulations
SPICE_MAX_CONCURRENT=4

# =============================================================================
# AI/ML Model Configuration
# =============================================================================

# Path to pre-trained model directory
MODEL_PATH=./models

# Model checkpoint for circuit generation
CIRCUIT_MODEL_CHECKPOINT=rf_diffusion_v2.pt

# PyTorch device (cpu, cuda, mps)
TORCH_DEVICE=cpu

# Maximum batch size for inference
MAX_BATCH_SIZE=32

# =============================================================================
# Database Configuration
# =============================================================================

# Database URL for design storage (sqlite for local development)
DATABASE_URL=sqlite:///./genrf.db

# Redis URL for caching (optional)
REDIS_URL=redis://localhost:6379

# =============================================================================
# Cloud/Storage Configuration
# =============================================================================

# S3-compatible storage for model artifacts (optional)
S3_ENDPOINT_URL=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=genrf-models

# =============================================================================
# EDA Tool Integration
# =============================================================================

# Cadence Virtuoso installation path
CADENCE_ROOT=

# Keysight ADS installation path
ADS_ROOT=

# Synopsys HSPICE path
HSPICE_ROOT=

# =============================================================================
# Technology Configuration
# =============================================================================

# Default technology node
DEFAULT_TECH_NODE=65nm

# PDK library path
PDK_LIB_PATH=./tech

# Default substrate type
DEFAULT_SUBSTRATE=silicon

# =============================================================================
# API and Security Configuration
# =============================================================================

# API secret key for JWT tokens
SECRET_KEY=your-secret-key-here

# API rate limiting (requests per minute)
API_RATE_LIMIT=100

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# Monitoring and Observability
# =============================================================================

# Enable metrics collection
ENABLE_METRICS=true

# Prometheus metrics port
METRICS_PORT=9090

# OpenTelemetry configuration
OTEL_SERVICE_NAME=genrf-circuit-diffuser
OTEL_SERVICE_VERSION=1.0.0

# Jaeger tracing endpoint
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# =============================================================================
# Development and Testing
# =============================================================================

# Enable debug mode
DEBUG=false

# Testing database URL
TEST_DATABASE_URL=sqlite:///./test_genrf.db

# Pytest configuration
PYTEST_ARGS=-v --cov=genrf

# Enable profiling
ENABLE_PROFILING=false

# =============================================================================
# Feature Flags
# =============================================================================

# Enable experimental quantum optimization
ENABLE_QUANTUM_OPT=false

# Enable neural ODE models
ENABLE_NEURAL_ODE=false

# Enable layout generation
ENABLE_LAYOUT_GEN=false

# Enable web dashboard
ENABLE_WEB_DASHBOARD=true